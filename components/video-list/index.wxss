/* components/video-list/index.wxss */

page {
    border-top: 0;
    position: relative;
}

.videoItem {
    position: relative;
    width: 690rpx;
    margin: 0 auto;
    /* padding-top:40rpx; */
    border-radius: 12rpx;
}

.videoItem .title {
    font-family: PingFangSC-Medium;
    color: #353535;
    text-align: left;
    font-size: 36rpx;
    /* padding: 20rpx 0rpx; */
    height: 90rpx;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 90rpx;
}

.videoItem .player {
    width: 100%;
    height: 389rpx;
    position: relative;
    /* border-radius: 12rpx; */
}

.videoItem .operate {
    background: #fff;
    /* box-sizing: border-box; */
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    -webkit-justify-content: center;
    /* padding: 20rpx 10rpx; */
    height: 93rpx;
    border-bottom: 1rpx solid #e3e3e3;
    /*   border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx; */
}

.videoItem .operate>view {
    width: 25%;
    height: 50rpx;
    margin-top: 20rpx;
}

.videoItem .operate image {
    width: 50rpx;
    height: 50rpx;
}

.videoItem .operate .favor {
    position: relative;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background: #fff;
}

.videoItem .operate .collect {
    position: relative;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background: #fff;
}

.videoItem .operate .comment {
    position: relative;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background: #fff;
}

.videoItem .operate .share {
    position: relative;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background: #fff;
}