/*搜索 开始*/
.search-bar-container{
  width: calc( 100% - 0);
  background: #fff;
  height: 60rpx;
  padding:20rpx 20rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.seabox-bar{
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    background: #F5F5F5;
}

/*开始搜索时*/
.seabox-bar .start-search{
  width: calc( 100% - 102rpx );
}

.seabox-bar icon{
  margin: 20rpx;

}
.search-bar-container input{
  height:60rpx;
  line-height:60rpx;
  font-size:28rpx;
  width:100%;
}

.activity-search{
  font-size: 28rpx;
  width: 70rpx;
  text-align: right;
}