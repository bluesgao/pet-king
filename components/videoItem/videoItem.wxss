.item {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  width: auto;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #abb4bf;
}
.header .name {
  display: flex;
  align-items: center;
  color: #333;
}
.header .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.footer .action {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}

.footer .action text {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}
.footer .action image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.hover-class,
.navigator-hover {
  background: #f2f2f2 !important;
}